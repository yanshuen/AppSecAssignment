@page
@model AppSecAssignment.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        @{
            @if (Model.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>We have sent an email with a link to reset your password.</p>
                </div>
            }
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="forgotpw.Email"></label>
                <input asp-for="forgotpw.Email" class="form-control" />
                <span asp-validation-for="forgotpw.Email" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Login">Login</a>
</div>